@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Access Denied";
}

<style>
    body {
        background-color: #f0f4f8; /* Light pastel blue */
        color: #333;
        font-family: 'Poppins', sans-serif !important;
    }

    .access-denied-container {
        background-color: #ffffff; /* White background for the message */
        border: none;
        width: 100%;
        text-align: center;
        padding: 40px 30px;
    }

    h1 {
        color: #dc3545; /* Bootstrap Danger Red */
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 20px;
    }

    p {
        color: #6c757d; /* Subtle gray */
        font-size: 1.2rem;
        margin-bottom: 30px;
    }

    .btn-primary {
        background-color: #6c63ff; /* Pastel violet */
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        font-size: 1rem;
        font-weight: 600;
        text-transform: uppercase;
        text-decoration: none;
    }

        .btn-primary:hover {
            background-color: #5a54e1; /* Darker shade for hover */
        }

    .btn-secondary {
        background-color: #6c757d; /* Subtle gray */
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        font-size: 1rem;
        font-weight: 600;
        text-transform: uppercase;
        text-decoration: none;
        color: #fff;
    }

        .btn-secondary:hover {
            background-color: #5a5e66; /* Darker shade for hover */
        }
</style>

<div class="container">
    <div class="access-denied-container">
        <h1>Access Denied</h1>
        <p>You do not have access to this resource.</p>
        <a href="/" class="btn btn-primary">Go to Home</a>
        <a href="javascript:history.back()" class="btn btn-secondary ml-3">Go Back</a>
    </div>
</div>
