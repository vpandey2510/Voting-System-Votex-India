@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Reset password confirmation";
}

<style>
    body {
        background-color: #f0f4f8; /* Light pastel blue */
        color: #333;
        font-family: 'Poppins', sans-serif !important;
    }

    .container {
        margin-top: 30px !important;
    }

    .confirmation-container {
        background-color: #ffffff; /* White background */
        border-radius: 10px;
        width: 50%;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        padding: 30px;
        margin-top: 50px;
        margin-bottom: 50px;
        text-align: center;
    }

    h1 {
        color: black; /* Pastel gray */
        font-size: 2rem;
        font-weight: 600;
        margin-bottom: 20px;
    }

    p {
        color: #6c757d; /* Pastel gray */
        font-size: 1rem;
        margin-bottom: 20px;
    }

    a {
        color: #6c63ff; /* Pastel violet */
        text-decoration: none;
        font-weight: 500;
    }

        a:hover {
            color: #5a54e1; /* Darker shade for hover */
            text-decoration: underline;
        }

    button .btn-primary {
        background-color: #6c63ff !important; /* Pastel violet */
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        font-size: 1rem;
        font-weight: 600;
        text-transform: uppercase;
    }

        button .btn-primary:hover {
            background-color: #5a54e1 !important; /* Darker shade for hover */
        }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 confirmation-container">
            <h1>Password Reset Successful</h1>
            <p>Your password has been reset successfully. You can now log in using your new password.</p>
            <a asp-page="./Login" class="btn btn-primary">Go to Login</a>
        </div>
    </div>
</div>
