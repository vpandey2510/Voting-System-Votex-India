@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<style>
    body {
        background-color: #f0f4f8; /* Light pastel blue */
        color: #333;
        font-family: 'Poppins', sans-serif !important;
    }


    .forgot-password-container {
        background-color: #ffffff; /* White background for the form */
        border: none;
        width: 50%;
        padding: 30px;
        margin-top: 30px;
        margin-bottom: 50px;
        text-align: center;
    }

    h2 {
        color: black; /* Pastel gray */
        font-size: 2rem;
        font-weight: 600;
        margin-bottom: 10px;
    }

    h3 {
        color: #6c757d; /* Light gray */
        font-size: 1.25rem;
        margin-bottom: 20px;
    }


    .form-floating > label {
        color: #6c757d; /* Pastel gray */
    }

    .form-control {
        border-radius: 5px;
        margin-bottom: 20px;
    }

    .btn-primary {
        background-color: #6c63ff; /* Pastel violet */
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        width: 100%;
    }

        .btn-primary:hover {
            background-color: #5a54e1; /* Darker shade for hover */
        }

    .text-danger {
        font-size: 0.9rem;
    }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 forgot-password-container">
            <h2>Forgot Your Password?</h2>
            <h3>Enter your email address to reset it.</h3>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Reset Password</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
