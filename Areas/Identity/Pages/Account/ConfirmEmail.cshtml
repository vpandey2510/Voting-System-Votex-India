@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm email";
}

<style>
    body {
        background-color: #f0f4f8; /* Light pastel blue */
        color: #333;
        font-family: 'Poppins', sans-serif !important;
    }

    .confirm-email{
        justify-content: center;
        margin-top: 50px;
    }

    h1 {
        color: black; /* Pastel gray */
    }

    a{
        margin-right: 10px;
        margin-left: 10px;
    }
</style>

<div class="confirm-email">
    <h1>@ViewData["Title"]</h1>
    <partial name="_StatusMessage" model="Model.StatusMessage" />


    <div class="mt-3 d-flex justify-content-center">
        <a asp-page="./Login" class="btn btn-outline-secondary">Go to Login Page</a>
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">Go to Home Page</a>
    </div>
</div>