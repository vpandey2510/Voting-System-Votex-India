@model IEnumerable<VotingSystem.Models.Candidate>

@{
    ViewData["Title"] = "Candidates";
}

<h1>Candidates</h1>

@* Anti-Forgery Token *@
<form>
    @Html.AntiForgeryToken()
</form>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Area)</th>
            <th>@Html.DisplayNameFor(model => model.Election)</th>
            <th>@Html.DisplayNameFor(model => model.Party)</th>
            <th>@Html.DisplayNameFor(model => model.Verified)</th>
            <th>@Html.DisplayNameFor(model => model.Position)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Area.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Election.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Party.Name)</td>
                <td>
                    <input type="checkbox" class="verify-checkbox" data-id="@item.CandidateID"
                    @(item.Verified ? "checked" : "") />
                </td>
                <td>@Html.DisplayFor(modelItem => item.Position)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.CandidateID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.CandidateID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.verify-checkbox').on('change', function () {
                var candidateId = $(this).data('id');
                var isVerified = $(this).is(':checked');
                var token = $('input[name="__RequestVerificationToken"]').val();

                $.ajax({
                    url: '@Url.Action("Verify", "Candidates")',
                    type: 'POST',
                    data: {
                        id: candidateId,
                        isVerified: isVerified,
                        __RequestVerificationToken: token
                    },
                    success: function (response) {
                        if (response.success) {
                            alert('Verification status updated successfully.');
                        } else {
                            alert('Error: ' + response.message);
                        }
                    },
                    error: function () {
                        alert('Error updating verification status.');
                    }
                });
            });
        });
    </script>
}
