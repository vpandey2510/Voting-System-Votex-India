@model VotingSystem.Models.Election

<style>
    body {
        background-color: #f0f4f8; /* Light pastel blue */
        color: #333;
        font-family: 'Poppins', sans-serif !important;
    }
    /* Container and header styling */
    .container {
        width: 100%;
        max-width: 1200px !important;
        margin: 0 auto;
    }

    .election-details-card {
        background-color: #ffffff; /* White background for the card */
        padding: 30px;
        margin-top: 50px;
    }
    h2 {
        color: #0D6EFD; 
    }
    .btn-primary {
        background-color: #6c63ff; /* Pastel violet */
        border: none;
    }
    .btn-primary:hover {
        background-color: #5a54e1; /* Darker shade for hover */
    }

    .btn-warning {
        background-color: #CCCCFF !important; /* Bootstrap warning color */
        border: none !important; /* No border */
        margin-right: 20px;
    }

        .btn-warning:hover {
            background-color: #C3B1E1 !important; /* Darker shade on hover for edit button */
            border: none !important; /* No border */
        }

        .btn-warning:active {
            background-color: #C3B1E1 !important; /* Darker shade on hover for edit button */
            border: none !important; /* No border */
            border-color: #000 !important;
            box-shadow: none !important;
        }

        .btn-warning:focus {
            box-shadow: none !important;
        }

    .btn-danger {
        background-color: #FAA0A0; /* Bootstrap danger color */
        border: none; /* No border */
    }

        .btn-danger:hover {
            background-color: #FF6961; /* Darker shade on hover for delete button */
        }
</style>


    <div class="container">
        <div class="election-details-card">
            <h2>@Model.Name</h2>
            <img src="@Model.ElectionImagePath" alt="Election" width="350px">
            <p><strong>Status:</strong> @Model.Status</p>
            <p><strong>Start Date:</strong> @Model.StartDate.ToShortDateString()</p>
            <p><strong>End Date:</strong> @Model.EndDate.ToShortDateString()</p>
            <p><strong>Description:</strong> @Model.Description</p>

            @if (User.IsInRole("Admin"))
            {
            <div class="d-flex justify-content-center w-100">
                <a asp-action="Edit" asp-route-id="@Model.ElectionID" class="btn btn-warning btn-sm">
                    <i class="fas fa-edit" style="margin-right: 10px; color: #6c63ff;"></i>Edit
                </a>
                <a asp-action="Delete" asp-route-id="@Model.ElectionID" class="btn btn-danger btn-sm"
                   onclick="return confirm('Are you sure you want to delete this Election?');">
                    <i class="fas fa-trash" style="margin-right: 10px; color: #e3342f;"></i> Delete
                </a>
            </div>
            }

            <div class="mt-4">
                <a href="@Url.Action("Index", "Elections")" class="btn btn-secondary">Back to Elections</a>
            </div>

        </div>
    </div>
