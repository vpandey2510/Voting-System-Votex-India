@model VotingSystem.Models.Election

@{
    ViewData["Title"] = "Edit";
}

<style>
    body {
        background-color: #f0f4f8; /* Light pastel blue */
        color: #333;
        font-family: 'Poppins', sans-serif !important;
    }
    .election-form-card {
        background-color: #ffffff; /* White background for the card */
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        padding: 30px;
        margin-top: 50px;
    }
    h1, h4 {
        color: black; /* Pastel gray */
        text-align: center;
    }
    .btn-primary {
        background-color: #6c63ff; /* Pastel violet */
        border: none;
    }
    .btn-primary:hover {
        background-color: #5a54e1; /* Darker shade for hover */
    }
</style>


    <div class="container">
        <div class="election-form-card">
            <h1>Edit Election</h1>
            <h4>Election Details</h4>
            <hr />
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ElectionID" />

                <!-- Name -->
                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label for="electionImage" class="control-label">Image</label>
                    <input type="file" name="electionImage" class="form-control" />
                </div>

                <!-- Start Date -->
                <div class="form-group mb-3">
                    <label asp-for="StartDate" class="control-label"></label>
                    <input asp-for="StartDate" class="form-control" type="date" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>

                <!-- End Date -->
                <div class="form-group mb-3">
                    <label asp-for="EndDate" class="control-label"></label>
                    <input asp-for="EndDate" class="form-control" type="date" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>

                <!-- Status (Radio Buttons) -->
                <div class="form-group mb-3">
                    <label>Status</label><br />
                    <span asp-validation-for="Status" class="text-danger"></span>
                    <div class="form-check form-check-inline">
                        <label class="form-check-label" for="openStatus">Open</label>
                        <input class="form-check-input" type="radio" name="Status" id="openStatus" value="Open"
                        @(Model?.Status != null && Model.Status == "Open" ? "checked" : "") />
                    </div>
                    <div class="form-check form-check-inline">
                        <label class="form-check-label" for="closedStatus">Closed</label>
                        <input class="form-check-input" type="radio" name="Status" id="closedStatus" value="Closed"
                        @(Model?.Status != null && Model.Status == "Closed" ? "checked" : "") />
                    </div>
                <div class="form-check form-check-inline">
                    <label class="form-check-label" for="upcomingStatus">Upcoming</label>
                    <input class="form-check-input" type="radio" name="Status" id="upcomingStatus" value="Upcoming"
                    @(Model?.Status != null && Model.Status == "Upcoming" ? "checked" : "") />
                </div>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <!-- Description -->
                <div class="form-group mb-3">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="form-group mb-3 text-center">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>

            <div class="text-center">
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
