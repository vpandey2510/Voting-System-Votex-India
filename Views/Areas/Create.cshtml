@model VotingSystem.Models.Area

@{
    ViewData["Title"] = "Create";
}

<style>
    body {
        background-color: #f8f9fa; /* Light gray background */
        font-family: 'Poppins', sans-serif; /* Clean font */
        color: #343a40; /* Dark gray text */
    }

    h1, h4 {
        text-align: center; /* Center-align headers */
        color: black; /* Muted gray for headers */
    }

    h1 {
        color: #0D6EFD !important;
        margin-top: 20px;
        margin-bottom: 20px; /* Add space below main header */
    }

    .row {
        display: flex;
        justify-content: center; /* Center the form in the page */
        margin-top: 30px; /* Add space above the form */
    }

    .col-md-4 {
        background-color: #ffffff; /* White card background */
        border-radius: 10px; /* Rounded corners for form container */
        padding: 20px; /* Add padding around form */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow effect */
        max-width: 400px; /* Limit width for better design */
    }

    .form-group label {
        color: black; /* Dark gray text for labels */
        margin-bottom: 5px;
    }

    .form-group input {
        border: 1px solid #ced4da; /* Light gray border */
        border-radius: 5px; /* Rounded corners for input fields */
        padding: 10px; /* Add padding inside input fields */
    }

    .form-group input:focus {
        border-color: #80bdff; /* Blue border on focus */
        box-shadow: 0 0 5px rgba(128, 189, 255, 0.5); /* Glow effect on focus */
        outline: none; /* Remove default outline */
        margin
    }

    .btn-primary {
        background-color: #007bff; /* Bootstrap primary blue */
        border: none; /* Remove border */
        padding: 10px 20px; /* Add padding to button */
        border-radius: 5px; /* Rounded button */
        transition: background-color 0.3s; /* Smooth hover transition */
    }

    .btn-primary:hover {
        background-color: #0056b3; /* Darker blue on hover */
    }

    .btn-primary:focus {
        outline: none; /* Remove focus outline */
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.5); /* Glow effect on focus */
    }

    a {
        color: #007bff; /* Bootstrap link color */
        text-decoration: none; /* Remove underline */
        font-weight: 600; /* Bold links */
        margin-top: 20px; /* Space above link */
        display: inline-block; /* Ensure spacing applies */
    }

    a:hover {
        text-decoration: underline; /* Underline on hover */
    }

    .text-danger {
        color: #dc3545 !important; /* Bootstrap danger red */
    }
</style>

<h1>Create New Constituency</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label for="areaImage" class="control-label">Constituency Map</label>
                <input type="file" name="areaImage" class="form-control" />
            </div>
            <div class="form-group mb-3 text-center">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>

        <div class="text-center">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>


