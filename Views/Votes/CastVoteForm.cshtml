@model IEnumerable<VotingSystem.Models.Candidate>

@{
    ViewData["Title"] = "Cast Your Vote";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h3>Select a Candidate to Vote for</h3>

    @if (Model == null || !Model.Any())
    {
        <p>No candidates available for this election in your area.</p>
    }
    else
    {
        <form asp-action="CastVote" method="post">
            <!-- ElectionID is passed via ViewBag -->
            <input type="hidden" name="electionId" value="@ViewBag.ElectionId" />

            <div>
                <label for="CandidateId">Candidate:</label>
                <select name="candidateId" id="CandidateId" required>
                    <option value="">Select a Candidate</option>
                    @foreach (var candidate in Model)
                    {
                        <option value="@candidate.CandidateID">@candidate.Name</option>
                    }
                </select>
            </div>

            <button type="submit">Cast Vote</button>
        </form>
    }
</div>

<div>
    <button onclick="window.location.href='@Url.Action("Index", "Home")'">Back to Home</button>
</div>
