@*
    @model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Total Votes by Election and Candidate";
}

<h2>@ViewData["Title"]</h2>

@if (!Model.Any())
{
    <p>No elections available.</p>
}
else
{
    foreach (var election in Model)
    {
        <h3>Election: @election.ElectionName</h3>

        @if (election.Candidates.Count == 0)
        {
            <p>No Candidates</p>
        }
        else
        {
            <table>
                <thead>
                    <tr>
                        <th>Candidate Name</th>
                        <th>Total Votes</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var candidate in election.Candidates)
                    {
                        <tr>
                            <td>@candidate.CandidateName</td>
                            <td>@(candidate.TotalVotes > 0 ? candidate.TotalVotes : "0")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    }
}
