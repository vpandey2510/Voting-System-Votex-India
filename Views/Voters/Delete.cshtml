@model VotingSystem.Models.Voter

@{
    ViewData["Title"] = "Delete";
}

<style>
    body {
        background-color: #f0f4f8; /* Light pastel blue */
        color: #333;
        font-family: 'Poppins', sans-serif !important;
    }

    .delete-confirmation {
        background-color: #ffffff; /* White background for the card */
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        padding: 30px;
        margin-top: 50px;
    }

    h3 {
        color: black; /* Pastel gray */
        text-align: center;
        margin-bottom: 30px;
    }

    .btn-danger {
        background-color: #FAA0A0; /* Bootstrap danger color */
        border: none; /* No border */
        font-size: 16px;
        color: #333333;
        padding: 6px 12px;
    }

    .btn-danger:hover {
        background-color: #FF6961; /* Darker shade on hover for delete button */
    }
</style>

<div class="container">
    <div class="delete-confirmation">
        <h3 class="text-center">Are you sure you want to delete this?</h3>
        <div>
            <h4 class="text-center">Voter Details</h4>
            <hr />
            <dl class="row">
                <!-- Name -->
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Name)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>

                <!-- Age -->
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Age)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Age)</dd>

                <!-- Gender -->
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Gender)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Gender)</dd>

                <!-- Username -->
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Username)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Username)</dd>

                <!-- Area -->
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Area)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Area.Name)</dd>

                <!-- Eligible -->
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Eligible)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Eligible)</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="VoterID" />
                <div class="text-center">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a asp-action="Details" asp-route-id="@Model.VoterID" class="btn btn-secondary">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>
